# Production Environment Configuration
NODE_ENV=production

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.resumebuilder.com
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# Backend Environment Variables
PORT=3001

# Database Configuration
DB_HOST=prod-db.resumebuilder.com
DB_PORT=5432
DB_NAME=resumebuilder_production
DB_USER=prod_user
DB_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000

# JWT Configuration - MUST CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MINIMUM_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_ME_PRODUCTION_REFRESH_SECRET_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET
COOKIE_SECURE=true
COOKIE_DOMAIN=.resumebuilder.com
CORS_ORIGIN=https://resumebuilder.com
CORS_CREDENTIALS=true

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3

# Logging
LOG_LEVEL=warn
LOG_FILE=/var/log/resumebuilder/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SWAGGER_DOCS=false

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=CHANGE_ME_SENDGRID_USER
EMAIL_PASSWORD=CHANGE_ME_SENDGRID_PASSWORD
EMAIL_FROM=noreply@resumebuilder.com

# External Services
REDIS_URL=CHANGE_ME_REDIS_URL
SENTRY_DSN=CHANGE_ME_SENTRY_DSN_FOR_PRODUCTION

# Production-specific
TRUST_PROXY=true 