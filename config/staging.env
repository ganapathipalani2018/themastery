# Staging Environment Configuration
NODE_ENV=staging

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api-staging.resumebuilder.com
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# Backend Environment Variables
PORT=3001

# Database Configuration
DB_HOST=staging-db.resumebuilder.com
DB_PORT=5432
DB_NAME=resumebuilder_staging
DB_USER=staging_user
DB_PASSWORD=CHANGE_ME_STAGING_PASSWORD
DB_SSL=true
DB_MAX_CONNECTIONS=15
DB_CONNECTION_TIMEOUT=30000

# JWT Configuration - CHANGE THESE IN ACTUAL STAGING
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_32_CHARACTERS_MINIMUM
JWT_REFRESH_SECRET=CHANGE_ME_STAGING_REFRESH_SECRET_32_CHARACTERS_MINIMUM
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
COOKIE_SECURE=true
COOKIE_DOMAIN=.resumebuilder.com
CORS_ORIGIN=https://staging.resumebuilder.com
CORS_CREDENTIALS=true

# Rate Limiting (Moderate for staging)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX_REQUESTS=10
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/resumebuilder/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SWAGGER_DOCS=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads

# Email Configuration (for staging testing)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USER=CHANGE_ME_MAILTRAP_USER
EMAIL_PASSWORD=CHANGE_ME_MAILTRAP_PASSWORD
EMAIL_FROM=noreply@staging.resumebuilder.com

# External Services
SENTRY_DSN=CHANGE_ME_SENTRY_DSN_FOR_STAGING 