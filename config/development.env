# Development Environment Configuration
NODE_ENV=development

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Backend Environment Variables
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=resumebuilderdb
DB_USER=resumeuser
DB_PASSWORD=resumepass123
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30000

# JWT Configuration - Development keys (NOT for production)
JWT_SECRET=dev-jwt-secret-key-32-characters-minimum-length-required
JWT_REFRESH_SECRET=dev-refresh-secret-key-32-characters-minimum-length-required
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=10
COOKIE_SECURE=false
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting (More lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=50
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_SWAGGER_DOCS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Development-specific
DEBUG=true 